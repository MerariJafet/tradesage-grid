# ===============================================
# TradeSage Grid Trading System - Configuration
# ===============================================

# ===== Trading Mode =====
# Options: "paper" (simulation) or "live" (real trading)
MODE=paper

# ===== Binance API Configuration =====
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true

# ===== Database Configuration (PostgreSQL + TimescaleDB) =====
POSTGRES_USER=tradesage
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=tradesage_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===== Redis Configuration =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== Application Ports =====
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ===== Logging =====
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===== Risk Management =====
# Maximum risk per trade as percentage of capital
MAX_RISK_PER_TRADE_PCT=0.5

# Maximum daily loss as percentage of capital
MAX_DAILY_LOSS_PCT=2.0

# Maximum consecutive losses before kill-switch
MAX_CONSECUTIVE_LOSSES=3

# ===== Telemetry & Monitoring =====
ENABLE_TELEMETRY=true
TELEMETRY_LOG_INTERVAL=60

# ===== Telegram Notifications (Optional) =====
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===== Development Settings =====
# Set to true to enable auto-reload
AUTO_RELOAD=true

# ===== Security =====
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# ===== Grid Trading Configuration =====
# Grid levels count
GRID_LEVELS=10

# Grid spacing percentage
GRID_SPACING_PCT=0.5

# Trailing stop percentage
TRAILING_STOP_PCT=1.5
